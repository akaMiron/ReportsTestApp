@model Reports.Web.ViewModels.LoginViewModel

<h2>Log In</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label for="inputEmail" asp-for="Email"></label><br />
        <input id="inputEmail" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="inputPassword" asp-for="Password"></label><br />
        <input id="inputPassword" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-check form-check-inline mb-2">
        <input id="inputRememberMe" class="form-check-input" asp-for="RememberMe" />
        <label for="inputRememberMe" class="form-check-label" asp-for="RememberMe"></label><br />
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Enter" />
    </div>
</form>