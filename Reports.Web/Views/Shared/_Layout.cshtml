<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reports</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Reports</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item my-auto mr-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="UserList">User's access</a>
                        </li>
                        @if (User.IsInRole("first") || User.IsInRole("admin"))
                        {
                            <li class="nav-item border-right border-left border-info mr-1">
                                <a class="nav-link text-info" asp-area="" asp-controller="Data" asp-action="FirstReport">First report</a>
                            </li>
                        }
                        @if (User.IsInRole("second") || User.IsInRole("admin"))
                        {
                            <li class="nav-item border-right border-left border-info ml-1">
                                <a class="nav-link text-info" asp-area="" asp-controller="Data" asp-action="SecondReport">Second report</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ml-auto">
                                <p class="nav-link text-dark my-auto">@User.Identity.Name</p>
                            </li>
                            <li class="nav-item my-auto">
                                <form class="form-inline my-2 my-lg-0" method="post" asp-controller="Account" asp-action="Logout">
                                    <input class="btn btn-link nav-link text-dark" type="submit" value="Logout" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-auto my-auto">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item my-auto">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2020 - Reports test web-application. &copy; <a href="https://www.linkedin.com/in/viktormyronenko/">Viktor Myronenko</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
